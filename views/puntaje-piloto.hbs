{{#> template}}
<h1 class="bg-dark">Puntajes Pilotos</h1>
<main class="mainPuntaje">
    <table class="table tablaPuntaje table-dark table-striped">
  <thead>
    <tr>
      <th scope="col" class="table-light">Posición</th>
      <th scope="col">Piloto</th>
      <th scope="col" class="table-light">Total</th>
      {{#each banderas}}
      <th>
      <img src="{{bandera}}" alt="" style="height: 10px; width:20px">
      </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each puntajes}}
    <tr>
      <th scope="row" class="table-light">{{posicion}}°</th>
      
      <td>{{piloto}}</td>
      <th  class="table-light">{{totalpuntos}}</th>
      {{#each carreras}}
        <td>{{this}}</td>
      {{/each}}
    </tr>
    {{/each}}
    
  </tbody>
</table>
</main>
{{/template}}